@model TrendyMemes.Web.Areas.Posts.ViewModels.PostDetailsViewModel

<div class="container">
    <div class="row">
        <div class="col-md-12 row-md-12">
            <h2 class="card-title">
                @Model.Title
            </h2>
            <img class="card-img-top" src="https://images.unsplash.com/photo-1503023345310-bd7c1de61c7d?ixid=MXwxMjA3fDB8MHxzZWFyY2h8MXx8aHVtYW58ZW58MHx8MHw%3D&ixlib=rb-1.2.1&w=1000&q=80" alt="Card image cap">
            <p class="card-text">
                Tags:
                @foreach (var tag in Model.Tags)
                {
                    <a asp-controller="Tags" asp-action="Details" asp-route-id="@tag.Id">
                        @tag.Name,
                    </a>
                }
            </p>
        </div>
    </div>
    <div class="row">
        @foreach (var comment in Model.Comments)
        {
            <div class="col-md-12 border">
                <p>@comment.AuthorUsername</p>
                <p>@comment.Content</p>
            </div>
        }
    </div>
</div>
